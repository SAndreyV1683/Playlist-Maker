<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="MainScreenBackgroundStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingsScreenBackgroundStyle">
        <item name="android:background">@color/black</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="LibraryScreenBackgroundStyle">
        <item name="android:background">@color/black</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="LibraryScreenTabLayoutStyle">
        <item name="android:background">@color/black</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabRippleColor">@color/light_gray</item>
    </style>

    <style name="SearchScreenBackgroundStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingsScreenTitleTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="LibraryScreenTitleTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="SettingsScreenMenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="SettingsScreenSwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="trackTint">@color/blue_light</item>
        <item name="thumbTint">@color/blue</item>
    </style>

    <style name="SettingsScreenMenuIconsStyle">
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_marginVertical">@dimen/large_padding</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="SearchScreenOnErrorRefreshButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/refresh_button_text</item>
    </style>

    <style name="LibraryScreenAddButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/play_lists_button_text</item>
    </style>

    <style name="SearchScreenSearchEditTextStyle">
        <item name="android:background">@drawable/search_background_night</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="SearchScreenClearIconStyle">
        <item name="android:tint">@color/black</item>
        <item name="android:paddingVertical">@dimen/ten_dp</item>
        <item name="android:paddingHorizontal">@dimen/small_padding</item>
    </style>


    <style name="track_item_track_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="track_item_singer_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">11sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="track_item_forward_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/icon_padding</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="track_item_ic_deliver_style">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="audio_player_background_style">
        <item name="background">@color/black</item>
    </style>

    <style name="audio_player_track_info_value_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="audio_player_playback_duration_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="audio_player_add_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_button_add_night</item>
    </style>

    <style name="audio_player_fav_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_button_fav_night</item>
    </style>

    <style name="audio_player_play_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_button_play</item>
    </style>

    <style name="audio_player_toolbar_style">
        <item name="navigationIcon">@drawable/ic_arrow_back_white</item>
    </style>
</resources>