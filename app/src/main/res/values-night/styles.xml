<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="MainScreenBackgroundStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingsScreenBackgroundStyle">
        <item name="android:background">@color/black</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="SettingsScreenTitleTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="SettingsScreenMenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="SettingsScreenSwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="trackTint">@color/blue_light</item>
        <item name="thumbTint">@color/blue</item>
    </style>

    <style name="SettingsScreenMenuIconsStyle">
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_marginVertical">@dimen/large_padding</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="SearchScreenSearchEditTextStyle">
        <item name="android:background">@drawable/search_background_night</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="SearchScreenClearIconStyle">
        <item name="android:tint">@color/black</item>
        <item name="android:paddingVertical">@dimen/ten_dp</item>
        <item name="android:paddingHorizontal">@dimen/small_padding</item>
    </style>


    <style name="track_item_track_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="track_item_singer_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">11sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="item_forward_image_style">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/icon_padding</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>
        <item name="android:tint">@color/white</item>
    </style>



</resources>