<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/YP_Blue">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/small_padding"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_gravity="start"
            android:textColor="@color/YP_White"
            android:textStyle="normal"
            android:textSize="@dimen/large_text_size" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:paddingStart="@dimen/medium_padding"
        android:paddingEnd="@dimen/medium_padding"
        android:paddingBottom="28dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/medium_padding"
            android:backgroundTint="@color/YP_White"
            android:text="@string/main_search_btn"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/large_text_size"
            android:foreground="?attr/selectableItemBackground"
            app:cornerRadius="@dimen/medium_padding"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/YP_Black"/>

        <Button
            android:id="@+id/library_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/medium_padding"
            android:backgroundTint="@color/YP_White"
            android:text="@string/main_media_library_btn"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/large_text_size"
            app:cornerRadius="@dimen/medium_padding"
            app:icon="@drawable/ic_library"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/YP_Black"/>

        <Button
            android:id="@+id/settings_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/YP_White"
            android:text="@string/main_settings_btn"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/large_text_size"
            app:cornerRadius="@dimen/medium_padding"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/YP_Black"/>

    </LinearLayout>

</LinearLayout>